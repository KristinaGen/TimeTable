
@{
    ViewBag.Title = "Bus";
}

<h2>Bus</h2>




<select name="menu" size="1">
    @foreach (var city in Model.List[1].List)
    {
         <option value="@city">@city</option>
    }
</select>


<table>
    <thead>
        <tr>
            <th>
                NumberRoute
            </th>
            <th>
                BusModel
            </th>
            <th>
                StartTime
            </th>
            <th>
                FinishTime
            </th>
            <th>
                DaysOfWeek
            </th>
            <th>
                CityFrom
            </th>
            <th>
                StationFrom(Platform)
            </th>
            <th>
                CityTo
            </th>
            <th>
                StationTo
            </th>
            <th>
                Cost
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bus in Model.List[0].List)
        {
            <tr>
                <td>
                    @bus.NumberRoute
                </td>
                <td>
                    @bus.BusModel
                </td>
                <td>
                    @bus.StartTime
                </td>
                <td>
                    @bus.FinishTime
                </td>
                <td>
                    @foreach (var day in bus.DaysOfWeek)
                    {
                        <text>
                            @(day),
                        </text>
                    }
                </td>
                <td>
                    @bus.CityFrom
                </td>
                <td>
                    @bus.StationFrom
                    (@bus.Platform)
                </td>
                <td>
                    @bus.CityTo
                </td>
                <td>
                    @bus.StationTo
                </td>
                <td>
                    @bus.Cost
                </td>
            </tr>
        }
    </tbody>
</table>
